<Window x:Class="Ressources.PageLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ressources"
        mc:Ignorable="d"
        Title="Connexion" Height="302" Width="269" ResizeMode="NoResize" KeyDown="PageLogin_OnKeyDown">
    <Grid Background="{StaticResource TileBrush2}">
        <Border CornerRadius="25" BorderThickness="3" BorderBrush="Black">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="20" Text="Connexion :" Margin="5"></TextBlock>
                <TextBox Text="Login" x:Name="Login" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30" Width="175" Margin="5"/>
                <PasswordBox x:Name="Mdp" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30" Width="175" Margin="5"/>
                <Button Name="BoutonConnexion" Click="Connexion" Height="30" Width="175" Margin="5" Content="Se connecter"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
